<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExcelTools"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Style TargetType="{x:Type Control}" x:Key="ElementStyle">
        <Setter Property="Margin" Value="3,3,0,3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource ElementStyle}"/>
    <Style TargetType="xctk:DateTimePicker" BasedOn="{StaticResource ElementStyle}"/>
    <Style TargetType="TextBlock" x:Key="TextBlockStyle">
        <Setter Property="Margin" Value="3,3,0,3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource ElementStyle}"/>
    <Style TargetType="Button" BasedOn="{StaticResource ElementStyle}" x:Key="SqareButton">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>